<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.hongtao.live.home.watch.VideoPlayerNoTouch
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/watch_room_bg_height"
        android:layout_marginStart="@dimen/watch_room_bg_margin_start_end"
        android:layout_marginTop="@dimen/watch_room_bg_margin_top"
        android:layout_marginEnd="@dimen/watch_room_bg_margin_start_end"
        android:background="@drawable/bg_watch_room" />

    <ImageView
        android:id="@+id/watch_iv_avatar"
        android:layout_width="@dimen/watch_iv_avatar_width_height"
        android:layout_height="@dimen/watch_iv_avatar_width_height"
        android:layout_marginStart="@dimen/watch_avatar_margin_top_start"
        android:layout_marginTop="@dimen/watch_avatar_margin_top_start" />

    <TextView
        android:id="@+id/watch_tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/watch_nick_margin_start"
        android:layout_marginTop="@dimen/watch_nick_margin_top"
        android:layout_toEndOf="@id/watch_iv_avatar"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/watch_tv_room_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_tv_nick"
        android:layout_marginStart="@dimen/watch_room_introduction_margin_start"
        android:layout_toEndOf="@id/watch_iv_avatar"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/watch_room_introduction_text_size" />

    <TextView
        android:id="@+id/watch_tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/watch_attention_margin_top"
        android:layout_marginEnd="@dimen/watch_attention_margin_end"
        android:background="@drawable/bg_watch_tv_attention"
        android:enabled="true"
        android:focusable="true"
        android:padding="@dimen/watch_attention_padding"
        android:text="@string/watch_iv_attention"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/watch_et_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/watch_et_message_margin_start_bottom"
        android:layout_marginBottom="@dimen/watch_et_message_margin_start_bottom"
        android:background="@drawable/bg_watch_et_message"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:paddingStart="@dimen/watch_et_message_padding"
        android:paddingEnd="@dimen/watch_et_message_padding" />

    <TextView
        android:id="@+id/watch_tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/watch_tv_send_margin_bottom_start"
        android:layout_marginBottom="@dimen/watch_tv_send_margin_bottom_start"
        android:layout_toEndOf="@id/watch_et_message"
        android:background="@drawable/bg_watch_tv_attention"
        android:padding="@dimen/watch_tv_send_padding"
        android:text="@string/watch_tv_send"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/watch_rv_message"
        android:layout_width="@dimen/watch_chat_rv_width"
        android:layout_height="@dimen/watch_chat_rv_height"
        android:layout_above="@id/watch_et_message"
        android:overScrollMode="always"
        android:layout_marginStart="@dimen/watch_chat_rv_margin_start_bottom"
        android:layout_marginBottom="@dimen/watch_chat_rv_margin_start_bottom"
        android:background="@drawable/bg_watch_rv_message" />

</RelativeLayout>